# Development Environment Configuration
# Copy this to .env for local development

# Environment
ENVIRONMENT=development

# Database (SQLite for local development)
DATABASE_URL=sqlite+aiosqlite:///./unclutr.db

# Firebase
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json
# FIREBASE_CREDENTIALS_JSON=  # Use for production
FIREBASE_API_KEY=  # Optional: For Email/Password auth in Swagger

# Google Cloud
GOOGLE_CLOUD_PROJECT=unclutr-monorep
GOOGLE_CLOUD_LOCATION=us-central1

# Security - Dev Auth (ENABLED for development)
ENABLE_DEV_AUTH=true
DEV_PASSWORD=admin
DEV_TOKEN=dev_token_123

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS (localhost for development)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

